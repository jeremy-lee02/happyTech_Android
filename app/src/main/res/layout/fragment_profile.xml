<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="1"
                    android:layout_marginLeft="80dp"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:text="Account Setting"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="18sp"/>
                <Button
                    android:id="@+id/logoutBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:textAllCaps="false"
                    android:textColor="@color/blue"
                    android:text="Logout" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:padding="8dp"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/avatar"
                    android:layout_width="80dp"
                    android:layout_height="80dp" />
                <TextView
                    android:id="@+id/nameTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="24sp"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    android:text="Loading..."/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_person_24"
                    android:drawablePadding="12dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:padding="15dp"
                    android:textSize="14sp"
                    android:text="First Name: " />

                <EditText
                    android:id="@+id/firstTxt"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:background="#00FFFFFF"
                    android:focusable="false"
                    android:text="Loading..." />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_person_24"
                    android:drawablePadding="12dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:padding="15dp"
                    android:text="Last Name: " />

                <EditText
                    android:id="@+id/lastTxt"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:background="#00FFFFFF"
                    android:focusable="false"
                    android:text="Loading..." />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textViewGender"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_person_24"
                    android:drawablePadding="12dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:padding="15dp"
                    android:text="Gender: " />

                <EditText
                    android:id="@+id/genderTxt"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:background="#00FFFFFF"
                    android:focusable="false"
                    android:text="Loading..." />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_email_24_black"

                    android:drawablePadding="12dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:padding="15dp"
                    android:text="Email: " />

                <EditText
                    android:id="@+id/emailTxt"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:background="#00FFFFFF"
                    android:focusable="false"
                    android:text="Loading..." />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_contact_phone_24_black"
                    android:drawablePadding="12dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:padding="15dp"
                    android:text="Phone: " />

                <EditText
                    android:id="@+id/phoneTxt"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:background="#00FFFFFF"
                    android:focusable="false"
                    android:text="Loading..." />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_home_24"

                    android:drawablePadding="12dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:padding="15dp"
                    android:text="Address: " />

                <EditText
                    android:id="@+id/addressTxt"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:background="#00FFFFFF"
                    android:focusable="false"
                    android:text="Loading..." />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:gravity="center">
                <Button
                    android:id="@+id/editProfile"
                    android:layout_width="wrap_content"
                    android:paddingHorizontal="80dp"
                    android:visibility="visible"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_full_rounded_black"
                    android:drawablePadding="8dp"
                    android:drawableLeft="@drawable/ic_baseline_edit_24"
                    android:textColor="@color/blue"
                    android:text="Edit Profile"/>

                <Button
                    android:id="@+id/saveProfile"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:paddingHorizontal="80dp"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/ic_baseline_save_24"
                    android:drawablePadding="8dp"
                    android:background="@drawable/button_full_rounded_black"
                    android:textColor="@color/blue"
                    android:text="Save Profile"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>




</FrameLayout>